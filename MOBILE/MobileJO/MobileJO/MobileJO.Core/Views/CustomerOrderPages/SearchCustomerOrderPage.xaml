<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentPage 
             xmlns:base="clr-namespace:MobileJO.Core.Base"         
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileJO.Core.Views.CustomerOrderPages.SearchCustomerOrderPage"
             Title="Search Filter"
             >

    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="40" Orientation="Vertical" Spacing="20">
            <Label Text="Customer Order #"/>
            <Entry MaxLength="9"  Text="{Binding CustomerOrderNumber}"/>
            <Label Text="Status"/>
            <Picker x:Name="Status" HorizontalOptions="FillAndExpand"
                    FontSize="Small"
                    ItemsSource="{Binding CustomerOrderStatus}"
                    SelectedItem="{Binding SelectedCustomerOrderStatus}">
            </Picker>

            <Button Text="Search" Command="{Binding SearchFilter}"/>
        </StackLayout>
    </ContentPage.Content>
</base:BaseContentPage>
